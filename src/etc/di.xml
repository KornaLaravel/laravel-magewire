<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd"
>
    <preference for="Magewirephp\Magewire\Model\RequestInterface"
                type="Magewirephp\Magewire\Model\Request"/>
    <preference for="Magewirephp\Magewire\Model\ResponseInterface"
                type="Magewirephp\Magewire\Model\Response"/>

    <type name="Magewirephp\Magewire\Model\ComponentResolver">
        <arguments>
            <!-- Inject Magewire default Layout XML block resolver. -->
            <argument name="default" xsi:type="object">Magewirephp\Magewire\Model\Component\Resolver\Layout</argument>

            <argument name="resolvers" xsi:type="array">
                <item name="widget" xsi:type="object">Magewirephp\Magewire\Model\Component\Resolver\Widget</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Widget\Model\Config\Converter">
        <plugin name="Magewirephp_Magewire_Plugin_Magento_Widget_Model_Config_Converter"
                type="Magewirephp\Magewire\Plugin\Magento\Widget\Model\Config\Converter"/>
    </type>

    <type name="Magewirephp\Magewire\Model\Component\WidgetCollection">
        <arguments>
            <argument name="mapping" xsi:type="array">
                <item name="visual_item" xsi:type="object">Magewirephp\Magewire\Magewire\Test</item>
            </argument>
        </arguments>
    </type>
</config>
